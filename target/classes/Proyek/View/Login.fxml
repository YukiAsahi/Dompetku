<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Proyek.Controller.LoginController"
           stylesheets="@../css/Login.css">

    <children>

        <!-- BACKGROUND FULLSCREEN -->
        <ImageView fx:id="bgImage"
                   preserveRatio="false"
                   StackPane.alignment="CENTER">
            <image>
                <Image url="@../image/money-bg.png" />
            </image>
        </ImageView>

        <!-- OVERLAY KONTEN -->
        <BorderPane>

                <!-- NAVBAR ATAS -->
                <top>
                    <HBox alignment="CENTER_LEFT"
                          spacing="40.0"
                          BorderPane.alignment="CENTER">
                        <children>
                            <Label styleClass="logoAtasKiri" text="DompetKu" />
                            <Region HBox.hgrow="ALWAYS" />
                            <HBox alignment="CENTER_RIGHT" spacing="24.0">
                                <children>
                                    <Hyperlink styleClass="linkAtasKiri"
                                               text="HOME"
                                               onAction="#handleHomeNav" />
                                    <Hyperlink styleClass="linkAtasKiri"
                                               text="ABOUT US"
                                               onAction="#handleAboutNav" />
                                    <Hyperlink styleClass="linkAtasKiri"
                                               text="CONTACT"
                                               onAction="#handleContactNav" />
                                    <Hyperlink onAction="#handleRegisterAction"
                                               styleClass="linkAtasKiri navAktif"
                                               text="SIGN UP" />
                                </children>
                            </HBox>
                        </children>
                        <padding>
                            <Insets left="80.0" right="80.0" top="40.0" />
                        </padding>
                    </HBox>
                </top>




                <!-- CARD LOGIN DI TENGAH -->
                <center>
                    <VBox alignment="CENTER"
                          fillWidth="false"
                          BorderPane.alignment="CENTER">
                        <children>
                            <!-- Card login -->
                            <VBox alignment="CENTER"
                                  prefWidth="450.0"
                                  maxWidth="450.0"
                                  spacing="20.0"
                                  styleClass="formLogin">
                                <children>
                                    <Label styleClass="judulLogin" text="Log in" />

                                    <!-- Username -->
                                    <StackPane prefWidth="450.0">
                                        <children>
                                            <TextField fx:id="namaAkunInput"
                                                       prefHeight="50.0"
                                                       promptText="ðŸ‘¤ Username"
                                                       styleClass="inputTeks" />
                                        </children>
                                    </StackPane>

                                    <!-- Password + icon mata -->
                                    <StackPane prefWidth="450.0">
                                        <children>
                                            <PasswordField fx:id="sandiInput"
                                                           prefHeight="50.0"
                                                           promptText="ðŸ”’ Password"
                                                           styleClass="inputTeks"
                                                           StackPane.alignment="CENTER_LEFT" />
                                            <TextField fx:id="sandiInputVisible"
                                                       prefHeight="50.0"
                                                       promptText="ðŸ”’ Password"
                                                       styleClass="inputTeks"
                                                       visible="false"
                                                       managed="false"
                                                       StackPane.alignment="CENTER_LEFT" />
                                            <Button fx:id="toggleSandiButton"
                                                    text="ðŸ‘"
                                                    onAction="#handleToggleSandiVisibility"
                                                    styleClass="tombolLihatSandi"
                                                    StackPane.alignment="CENTER_RIGHT">
                                                <StackPane.margin>
                                                    <Insets right="12.0" />
                                                </StackPane.margin>
                                            </Button>
                                        </children>
                                    </StackPane>

                                    <HBox alignment="CENTER_RIGHT" prefWidth="450.0">
                                        <children>
                                            <Hyperlink styleClass="lupaKataSandi" 
                                                       text="Forgot Password?" 
                                                       onAction="#handleLupaSandiAction" />
                                        </children>
                                    </HBox>

                                    <Button onAction="#handleLoginAction"
                                            prefHeight="40.0"
                                            prefWidth="140.0"
                                            styleClass="tombolMasuk"
                                            text="Log in">
                                        <VBox.margin>
                                            <Insets top="10.0" />
                                        </VBox.margin>
                                    </Button>

                                    <HBox alignment="CENTER" spacing="6.0">
                                        <children>
                                            <Label styleClass="teksAtau" text="or" />
                                            <Hyperlink onAction="#handleRegisterAction"
                                                       styleClass="linkDaftar"
                                                       text="Sign Up" />
                                        </children>
                                    </HBox>
                                </children>
                                <padding>
                                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                                </padding>
                            </VBox>
                        </children>
                    </VBox>
                </center>

        </BorderPane>
   </children>
</StackPane>
