<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Proyek.Controller.PlanningMahasiswaController"
            fx:id="rootPane"
            prefWidth="1280.0" prefHeight="720.0"
            stylesheets="@../css/planningmahasiswa.css"
            styleClass="rootPane">

    <left>
        <VBox fx:id="sidebar"
              prefWidth="260.0"
              spacing="16.0"
              styleClass="sidebar">
              
            <HBox spacing="8.0" alignment="CENTER">
                <Label text="Dompetku"
                       style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <VBox spacing="8.0" alignment="CENTER" styleClass="sidebar-profile">
                <Circle fx:id="imgProfileCircle"
                        radius="45.0"
                        stroke="white" strokeWidth="3"
                        styleClass="profile-circle"/>
                <Label fx:id="lblUsername"
                       text="Username"
                       styleClass="profile-username"/>
            </VBox>

            <!-- Menu -->
            <VBox spacing="4.0" style="-fx-padding: 8 0 0 0;">
                <Button fx:id="btnDashboard"
                        text="Dashboard"
                        maxWidth="Infinity"
                        styleClass="tombolSidebar"/>
                <Button fx:id="btnTransaction" text="Transaction"
                        maxWidth="Infinity"
                        styleClass="tombolSidebar"/>
                <Button fx:id="btnWallet"
                        text="Wallet"
                        maxWidth="Infinity"
                        styleClass="tombolSidebar"/>
                <Button fx:id="btnPlanning"
                        text="Planning"
                        maxWidth="Infinity"
                        styleClass="tombolSidebar"/>
                <Button fx:id="btnHistory"
                        text="Category"
                        maxWidth="Infinity"
                        styleClass="tombolSidebar"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <VBox spacing="4.0">
                <Button fx:id="btnSettings"
                        maxWidth="Infinity"
                        styleClass="tombolSettings">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@../image/setting.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="areaKonten">
            <VBox spacing="16.0">
                <padding>
                    <Insets topRightBottomLeft="20.0"/>
                </padding>
                
                <!-- Header with Notification -->
                <HBox alignment="CENTER_LEFT" spacing="16.0">
                    <Button fx:id="btnToggleSidebar"
                            text="â‰¡"
                            styleClass="tombolToggleSidebar"/>
                    <Label text="PLANNING" styleClass="judulHalaman"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <!-- Notification Button -->
                    <Button fx:id="btnNotification" styleClass="notifButton">
                        <graphic>
                            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                                <Image url="@../image/notification.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Label fx:id="lblNotifBadge" styleClass="notifBadge" text="0" visible="false"/>
                </HBox>

                <!-- Card Container like Transaction/Wallet -->
                <VBox VBox.vgrow="ALWAYS" styleClass="kartuPlanning">
                    <padding>
                        <Insets topRightBottomLeft="24.0"/>
                    </padding>
                    
                    <!-- Tab Toggle -->
                    <HBox alignment="CENTER" spacing="8.0" styleClass="tabContainer">
                        <Button fx:id="btnTabBudgeting" text="ðŸ’° Budgeting" styleClass="tabButton"/>
                        <Button fx:id="btnTabGoals" text="ðŸŽ¯ Goals (Nabung)" styleClass="tabButton"/>
                    </HBox>

                    <!-- Content Stack -->
                    <StackPane VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="16.0"/>
                        </padding>
                        
                        <!-- Budgeting Panel -->
                        <VBox fx:id="budgetingPane" spacing="16.0" visible="true">
                            <HBox alignment="CENTER_LEFT" spacing="16.0">
                                <Label text="Budget Limits" styleClass="sectionTitle"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnAddBudget" text="+ Tambah Budget" styleClass="btnAdd"/>
                            </HBox>
                            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scrollPaneTransparent">
                                <VBox fx:id="vboxBudgetCards" spacing="12"/>
                            </ScrollPane>
                        </VBox>

                        <!-- Goals Panel -->
                        <VBox fx:id="goalsPane" spacing="16.0" visible="false">
                            <HBox alignment="CENTER_LEFT" spacing="16.0">
                                <Label text="Savings Goals" styleClass="sectionTitle"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnAddGoals" text="+ Tambah Goals" styleClass="btnAdd"/>
                            </HBox>
                            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scrollPaneTransparent">
                                <VBox fx:id="vboxGoalsCards" spacing="12"/>
                            </ScrollPane>
                        </VBox>
                    </StackPane>
                </VBox>
            </VBox>
            
            <!-- Notification Popup Panel (hidden by default) -->
            <VBox fx:id="notifPanel" styleClass="notifPanel" visible="false" 
                  maxWidth="350" maxHeight="400"
                  StackPane.alignment="TOP_RIGHT">
                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <Label text="ðŸ”” Notifikasi" styleClass="notifTitle"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnCloseNotif" text="âœ•" styleClass="btnCloseNotif"/>
                </HBox>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scrollPaneTransparent">
                    <VBox fx:id="notifContent" spacing="8.0"/>
                </ScrollPane>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
