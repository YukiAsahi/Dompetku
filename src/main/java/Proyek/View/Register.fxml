<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Proyek.Controller.RegisterController"
           stylesheets="@../css/Register.css">

    <children>

        <!-- BACKGROUND FULLSCREEN -->
        <ImageView fx:id="bgImage"
                   preserveRatio="false"
                   StackPane.alignment="CENTER">
            <image>
                <Image url="@../image/money-bg.png" />
            </image>
        </ImageView>

        <!-- OVERLAY KONTEN -->
        <BorderPane>

            <!-- NAVBAR ATAS -->
            <top>
                <HBox alignment="CENTER_LEFT"
                      spacing="40.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Label styleClass="logoAtasKiri" text="DompetKu" />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER_RIGHT" spacing="24.0">
                            <children>
                                <Hyperlink styleClass="linkAtasKiri"
                                           text="HOME"
                                           onAction="#handleHomeNav" />
                                <Hyperlink styleClass="linkAtasKiri"
                                           text="ABOUT US"
                                           onAction="#handleAboutNav" />
                                <Hyperlink styleClass="linkAtasKiri"
                                           text="CONTACT"
                                           onAction="#handleContactNav" />
                                <Hyperlink onAction="#handleCancelAction"
                                           styleClass="linkAtasKiri navAktif"
                                           text="LOG IN" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="80.0" right="80.0" top="40.0" />
                    </padding>
                </HBox>
            </top>



            <!-- CARD REGISTER DI TENGAH -->
            <center>
                <VBox alignment="CENTER"
                      fillWidth="false"
                      BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="TOP_LEFT"
                              prefWidth="480.0"
                              maxWidth="480.0"
                              spacing="15.0"
                              styleClass="formDaftar">
                            <children>
                                <Label styleClass="judulDaftar" text="Sign up" />

                                <VBox spacing="5">
                                    <children>
                                        <Label styleClass="labelInput" text="Full Name" />
                                        <TextField fx:id="namaLengkapInput"
                                                   prefHeight="40.0"
                                                   promptText="Uchiha Sumbul bin Naufal Abhirama"
                                                   styleClass="inputTeks" />
                                    </children>
                                </VBox>

                                <VBox spacing="5">
                                    <children>
                                        <Label styleClass="labelInput" text="Username" />
                                        <TextField fx:id="namaAkunInput"
                                                   prefHeight="40.0"
                                                   promptText="Sumbul"
                                                   styleClass="inputTeks" />
                                    </children>
                                </VBox>

                                <VBox spacing="5">
                                    <children>
                                        <Label styleClass="labelInput" text="Email Address" />
                                        <TextField fx:id="emailInput"
                                                   prefHeight="40.0"
                                                   promptText="example@gmail.com"
                                                   styleClass="inputTeks" />
                                    </children>
                                </VBox>

                                <VBox spacing="5">
                                    <children>
                                        <Label styleClass="labelInput" text="Daftar Sebagai" />
                                        <ComboBox fx:id="tipeAkunCombo"
                                                  prefHeight="40.0"
                                                  prefWidth="450.0"
                                                  promptText="Pilih"
                                                  styleClass="inputTeks" />
                                    </children>
                                </VBox>

                                <!-- PASSWORD & CONFIRM PASSWORD -->
                                <GridPane hgap="15" vgap="5" prefWidth="450.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" />
                                        <ColumnConstraints hgrow="SOMETIMES" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>

                                    <children>
                                        <Label styleClass="labelInput"
                                               text="Password"
                                               GridPane.columnIndex="0"
                                               GridPane.rowIndex="0" />
                                        <Label styleClass="labelInput"
                                               text="Confirm Password"
                                               GridPane.columnIndex="1"
                                               GridPane.rowIndex="0" />

                                        <!-- Kolom Password -->
                                        <StackPane GridPane.columnIndex="0"
                                                   GridPane.rowIndex="1">
                                            <children>
                                                <PasswordField fx:id="sandiInput"
                                                               prefHeight="40.0"
                                                               styleClass="inputKataSandi"
                                                               StackPane.alignment="CENTER_LEFT" />
                                                <TextField fx:id="sandiInputVisible"
                                                           prefHeight="40.0"
                                                           styleClass="inputKataSandi"
                                                           visible="false"
                                                           managed="false"
                                                           StackPane.alignment="CENTER_LEFT" />
                                                <Button fx:id="toggleSandiButton"
                                                        text="ðŸ‘"
                                                        onAction="#handleToggleSandiVisibility"
                                                        styleClass="tombolLihatSandi"
                                                        StackPane.alignment="CENTER_RIGHT">
                                                    <StackPane.margin>
                                                        <Insets right="8.0" />
                                                    </StackPane.margin>
                                                </Button>
                                            </children>
                                        </StackPane>

                                        <!-- Kolom Confirm Password -->
                                        <StackPane GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1">
                                            <children>
                                                <PasswordField fx:id="confirmSandiInput"
                                                               prefHeight="40.0"
                                                               styleClass="inputKataSandi"
                                                               StackPane.alignment="CENTER_LEFT" />
                                                <TextField fx:id="confirmSandiInputVisible"
                                                           prefHeight="40.0"
                                                           styleClass="inputKataSandi"
                                                           visible="false"
                                                           managed="false"
                                                           StackPane.alignment="CENTER_LEFT" />
                                                <Button fx:id="toggleConfirmSandiButton"
                                                        text="ðŸ‘"
                                                        onAction="#handleToggleConfirmSandiVisibility"
                                                        styleClass="tombolLihatSandi"
                                                        StackPane.alignment="CENTER_RIGHT">
                                                    <StackPane.margin>
                                                        <Insets right="8.0" />
                                                    </StackPane.margin>
                                                </Button>
                                            </children>
                                        </StackPane>
                                    </children>
                                </GridPane>

                                <Button onAction="#handleRegisterAction"
                                        prefHeight="40.0"
                                        prefWidth="180.0"
                                        styleClass="tombolBuatAkun"
                                        text="Create Account">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>

                                <Hyperlink onAction="#handleCancelAction"
                                           styleClass="linkMasuk"
                                           text="or Log in" />
                            </children>
                            <padding>
                                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </center>

        </BorderPane>
    </children>
</StackPane>